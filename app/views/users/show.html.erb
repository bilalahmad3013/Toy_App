<p style="color: green"><%= notice %></p>

<%= render @user %>

<div>
  <%= link_to "Edit this user", edit_user_path(@user) %> |
  <%= link_to "Back to users", users_path %>
  <% @user.microposts.all.each do |post|%>
  <h2>Your Posts</h2> 
  <%= post.content%>
  <br>
  <%end%>

  

  <%= button_to "Destroy this user", @user, method: :delete , data: {turbo_confirm: "Are you sure?" }%>
</div>
